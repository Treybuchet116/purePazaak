<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaygroundActivity">


    <ImageView
        android:id="@+id/comSideHand1"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardback" />

    <ImageView
        android:id="@+id/comSideHand2"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pSideHand1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardback" />

    <ImageView
        android:id="@+id/comSideHand3"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pSideHand2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardback" />

    <ImageView
        android:id="@+id/comSideHand4"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pSideHand3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cardback" />

    <RatingBar
        android:id="@+id/comSetWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="3"
        app:layout_constraintBottom_toTopOf="@id/comHand3"
        app:layout_constraintEnd_toStartOf="@id/tvComScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comSideHand3" />

    <TextView
        android:id="@+id/tvComScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/comHand3"
        app:layout_constraintEnd_toEndOf="@id/pHand8"
        app:layout_constraintStart_toStartOf="@id/pHand8"
        app:layout_constraintTop_toBottomOf="@id/comSideHand3" />

    <ImageView
        android:id="@+id/comHand1"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/comHand6"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand2"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/comHand6"
        app:layout_constraintStart_toEndOf="@id/pSideHand1"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand3"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/comHand6"
        app:layout_constraintStart_toEndOf="@id/pSideHand2"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand4"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/comHand6"
        app:layout_constraintStart_toEndOf="@id/pSideHand3"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand5"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/comHand6"
        app:layout_constraintStart_toEndOf="@id/comHand9"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand6"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand7"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/pSideHand1"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand8"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/pSideHand2"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/comHand9"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintStart_toEndOf="@id/pSideHand3"
        app:srcCompat="@drawable/cardblank" />

    <Button
        android:id="@+id/btnComHit"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:text="Hit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnComStand"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:clickable="false"
        android:text="Stand"
        app:layout_constraintBottom_toTopOf="@+id/comHand5"
        app:layout_constraintEnd_toEndOf="parent" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pHand1"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand2"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand1"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand3"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand2"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand4"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand3"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand5"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand4"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand6"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pHand1"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand7"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand1"
        app:layout_constraintTop_toBottomOf="@id/pHand1"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand8"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand2"
        app:layout_constraintTop_toBottomOf="@id/pHand1"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pHand9"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintStart_toEndOf="@id/pHand3"
        app:layout_constraintTop_toBottomOf="@id/pHand1"
        app:srcCompat="@drawable/cardblank" />

    <RatingBar
        android:id="@+id/pSetWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="3"
        app:layout_constraintBottom_toTopOf="@id/pSideHand3"
        app:layout_constraintEnd_toStartOf="@id/tvPScore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pHand8" />

    <TextView
        android:id="@+id/tvPScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/pSideHand3"
        app:layout_constraintEnd_toEndOf="@id/pHand8"
        app:layout_constraintStart_toStartOf="@id/pHand8"
        app:layout_constraintTop_toBottomOf="@id/pHand8" />

    <ImageView
        android:id="@+id/pSideHand1"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pSideHand2"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pSideHand1"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pSideHand3"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pSideHand2"
        app:srcCompat="@drawable/cardblank" />

    <ImageView
        android:id="@+id/pSideHand4"
        android:layout_width="64dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/cardSideSelectMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/pSideHand3"
        app:srcCompat="@drawable/cardblank" />

    <Button
        android:id="@+id/btnHit"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:text="HIT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pHand5" />

    <Button
        android:id="@+id/btnStand"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:text="STAND"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHit" />

    <Button
        android:id="@+id/btnFlip"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:text="FLIP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>